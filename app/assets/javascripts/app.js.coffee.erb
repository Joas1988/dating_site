jQuery ->
  # polling
  root = '<%= (Rails.env.production? ? 'http://zanes-dating-site.herokuapp.com/' : '/') %>'
  controller = ''
  data = {}
  delay = 5000
  updatePage = ->
    if $('#conversation').length > 0
      controller = 'messages/'
      delay = 5000
      data['parent_action'] = 'show'
      data['contact_id'] = $('#conversation').data('contact_id')
    else
      delay = 20000
      data = {}
      controller = ''
    location = "#{root + controller}poll"
    $.ajax location,
      data: data
      type: 'GET'
      dataType: 'script'
      window.setTimeout updatePage, delay
  window.setTimeout updatePage, delay

  # remove flash messages on tab clicks
  $('ul.nav-tabs').children('li').children('a').click ->
    $("#flash_messages").html("")

  # smooth scroll to top with footer link
  $('#scroll_top').click ->
    $('html, body').stop().animate(
      scrollTop: 0
    , 'fast')
<%#
  # submit search on change
  $('input#search_form_search_for').on 'input', ->
    $('form#new_search_form').submit()
%>
