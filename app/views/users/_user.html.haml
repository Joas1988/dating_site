.panel.panel-default
  .panel-heading
    %h3.panel-title
      = content_tag :span, (user.try(:essay_info).try(:headline) || ""), class: 'pull-left'
      = content_tag :span, user.last_activity, class: 'pull-right'
    .clearfix
  .panel-body
    .row
      .col-sm-5.col-md-3
        = link_to user do
          .thumbnail
            = image_tag user.default_pic(:thumb)
      .col-sm-7.col-md-9
        = link_to user.username, user
        %br
        .user-summary= raw user.try(:essay_info).try(:about_me)
